<div class="container">
  <div class="col-xs-1"></div>
  <div class="col-xs-8">
    <form class="form-horizontal" action="/chats" method="POST">
      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-4 col-form-label col-form-label-lg">Enter a recipient</label>
        <div class="col-sm-8">
          <input type="text" class="form-control form-control-lg" id="lgFormGroupInput" placeholder="recipient" name="recipient">
        </div>
      </div>
      <div class="form-group row">
        <label for="lgFormGroupInput" class="col-sm-4 col-form-label col-form-label-lg">Enter a message to start</label>
        <div class="col-sm-8">
          <input type="text" class="form-control form-control-lg" id="lgFormGroupInput" placeholder="message" name="composedMessage">
          <input type="hidden" name="authorName" value="<%= currentUser.firstName %>">
          <br>
          <input class="btn btn-primary" type="submit" value="Create">
        </div>
      </div>
    </div>
  </form>
</div>
</div>
