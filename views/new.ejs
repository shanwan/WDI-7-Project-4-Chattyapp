<div class="container">
  <form class="form-horizontal" action="/chats" method="POST">
    <div class="form-group row">
      <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Enter a recipient</label>
      <div class="col-sm-10">
        <input type="text" class="form-control form-control-lg" id="lgFormGroupInput" placeholder="recipient" name="recipient">
      </div>
    </div>
    <div class="form-group row">
      <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">Enter a message to start</label>
      <div class="col-sm-10">
        <input type="text" class="form-control form-control-lg" id="lgFormGroupInput" placeholder="message" name="composedMessage">
      </div>
      <input type="hidden" name="authorName" value="<%= currentUser.profile.firstName %>">
    </div>
    <button action="submit" className="btn btn-primary">Create</button>
  </form>
</div>
